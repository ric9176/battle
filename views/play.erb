<%= @game.player1.name %>: <%= @game.player1.hp %>HP vs <%= @game.player2.name %>: <%= @game.player2.hp %>HP

<form action='/attack' method=post>
  <input type="submit" value="Attack!" name="attack_confirmation">
  <% if @attack_confirmation %>
    <h1><%=@game.player2.name %> attacks <%= @game.player1.name %>, <%= @game.player1.name %>'s turn to attack</h1>
  <% end %>

</form>
